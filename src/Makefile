OBJS = ast.cmo sast.cmo parser.cmo scanner.cmo analyzer.cmo javaconvert.cmo javacode.cmo pc.cmo

TESTS = \
arith1 \
arith2 \
fib \
for1 \
func1 \
func2 \
func3 \
gcd \
hello \
if1 \
if2 \
if3 \
if4 \
ops1 \
var1 \
while1

TARFILES = Makefile testall.sh scanner.mll parser.mly \
	ast.ml sast.ml jt.mli analyzer.ml javaconvert.ml javacode.ml pc.ml \
	$(TESTS:%=tests/test-%.pc) \
	$(TESTS:%=tests/test-%.out)

pc : $(OBJS)
	ocamlc -g -o pc $(OBJS)

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -g -c $<

%.cmi : %.mli
	ocamlc -g -c $<

pubCrawl.tar.gz : $(TARFILES)
	cd .. && tar czf src/pubCrawl.tar.gz $(TARFILES:%=pubCrawl/%)

.PHONY : test
test : pc testall.sh
	./testall.sh

.PHONY : clean
clean :
	rm -f pc parser.ml parser.mli parser.output scanner.ml testall.log \
	*.cmo *.cmi *.out *.diff

.PHONY : all
all: clean pc

# Generated by ocamldep *.ml *.mli
analyzer.cmo : sast.cmo ast.cmo
analyzer.cmx : sast.cmx ast.cmx
parser.cmo : ast.cmo parser.cmi
parser.cmx : ast.cmx parser.cmi
pc.cmo : scanner.cmo sast.cmo parser.cmi ast.cmo analyzer.cmo
pc.cmx : scanner.cmx sast.cmx parser.cmx ast.cmx analyzer.cmx
sast.cmo : ast.cmo
sast.cmx : ast.cmx
scanner.cmo : parser.cmi
scanner.cmx : parser.cmx
parser.cmi : ast.cmo
